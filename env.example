# Multi-LLM Orchestrator Configuration
# Copy this file to .env and fill in your actual API keys

# GigaChat API Configuration
# Authorization key for OAuth2 authentication (obtain from https://developers.sber.ru/)
GIGACHAT_API_KEY=your_authorization_key_here
# Optional: OAuth2 scope (GIGACHAT_API_PERS for personal, GIGACHAT_API_CORP for corporate)
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# YandexGPT API Configuration
# IAM token for authentication (obtain from Yandex Cloud, valid for 12 hours)
YANDEXGPT_API_KEY=your_iam_token_here
# Yandex Cloud folder ID (required for YandexGPT)
YANDEXGPT_FOLDER_ID=your_folder_id_here

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Default provider settings
DEFAULT_PROVIDER=auto
MAX_RETRIES=3
TIMEOUT_SECONDS=30
